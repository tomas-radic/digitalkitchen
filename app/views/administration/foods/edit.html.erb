<div class="container-fluid">
  <%= render "administration/foods/form" %>
</div>

<section class="admin-associations">
  <div class="bottom-table">
    <p>Postup</p>
    <div class="table-responsive">
      <table class="table">
        <tbody>
          <tr>
            <td colspan="3"><%= link_to "+", new_administration_part_path(food_id: @food.id) %></td>
          </tr>
          <% @food.parts.sorted.each do |part| %>
            <tr>
              <td><%= part.position %></td>
              <td class="tw-underline"><%= link_to part.name, edit_administration_part_path(part) %></td>
              <td><%= link_to "x", administration_part_path(part), method: :delete, data: { confirm: "Naozaj vymazať túto fázu prípravy?" } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>
