<div class="modal fade" id="add-onetime-raw-modal" tabindex="-1" role="dialog" aria-labelledby="add-onetime-raw-modal" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <%= form_for Raw.onetime.new, url: submit_path, remote: true do |f| %>
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Nákupná položka</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <p class="tw-text-sm py-1">
              Vytvor si jednorazovú nákupnú položku. Môžeš si ju nazvať akokoľvek.
            </p>
            <%= f.text_field :name, class: "form-control", placeholder: "názov", required: true %>
          </div>
          <div class="form-group">
            <p class="tw-text-sm py-1">
              Chceš ju niekam zaradiť?
            </p>
            <%= f.collection_select :category_id, RawCategory.sorted, :id, :name, { include_blank: "Nikam" }, { class: "form-control" } %>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit "Potvrdiť", class: "btn btn-sm dark-carrot btn-outline-dark" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
  function closeModal() {
    $("#raw_name").val("");
    $("#raw_category_id").val($("#raw_category_id:first-child option:first").val());
    // $("#add-onetime-raw-modal").modal("hide");
    $("#add-onetime-raw-modal .close").click();
  }
</script>
