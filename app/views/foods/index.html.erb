<div class="container-fluid">
  <h1 class="h1 dark-carrot text-center display-1 tw-py-8">
    <%= @heading %>
  </h1>
</div>

<div id="page-description" class="tw-bg-gray-200 tw-px-2 py-4 text-center">
  Celkový počet zvolených jedál je <b class="dark-carrot tw-text-lg"><%= @total_count %></b>.<br>

  <% if @total_count > @limit %>
    Zobrazuje sa náhodných <%= @limit %>.
    <button class="btn btn-light btn-sm" id="reload-foods-btn">Zobraziť iné</button>
  <% end %>
  <div class="py-1">
    <%= link_to "Pridať návrh", new_users_proposal_path, class: "btn btn-sm dark-carrot btn-outline-dark" %>
  </div>
</div>

<div class="container-fluid tw-mt-4">
  <% if @foods.any? %>
    <div class="row">
      <% @foods.each do |food| %>
        <%= render "foods/tile", food: food %>
      <% end %>
    </div>
  <% else %>
    <p class="text-center tw-py-8">Nie sú tu žiadne jedlá.</p>
  <% end %>
</div>
