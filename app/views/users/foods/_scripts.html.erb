<script type=text/javascript>
  $(document).on('turbolinks:load', function() {

    $(function ($) {
      $(".ios").iosCheckbox();
    });


    $("#available").change(function() {
      var checked = $(this).next(".ios-ui-select").hasClass("checked");
      var targetPath = "<%= users_foods_path %>" +
          "?" +
          $.param(
              {
                filter: {
                  list: "<%= params.dig(:filter, :list) %>",
                  available: checked
                }
              });

      $("#loader").addClass("loader");
      setTimeout(
          function() {
            window.location.replace(targetPath)
          },
          400
      );

    });


    $("#reload-foods-btn").click(function() {
      $("#loader").addClass("loader");
      location.reload();
    });
  });
</script>
